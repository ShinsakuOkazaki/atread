<h2>Users Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Zip Code</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>
        <a href="/users/{{this._id}}">
          {this.fullName}}
        </a>
      </td>
      <td>
        {{this.email}}
      </td>
      <td>
        <a href="/users/{{this._id}}/delete?_method=DELETE" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>